<%=render :partial=>"layouts/header"%>
<%=render :partial=>"layouts/left_panel"%>
<section class="main-content-wrapper column">
   <section id="main-content">
        <div class="row">
           <div class="col-md-12">
               <!--breadcrumbs start -->
               <ul class="breadcrumb">
                   <li><a href="#">Dashboard</a></li>
                   <li class="active">Social Account</li>
               </ul>
               <!--breadcrumbs end -->
           <h1 class="h1"><i class="fa fa-users"></i> Social Account</h1>
       </div>
       </div>

     <div class="row">
           <div class="col-md-12">
               <div class="panel panel-default">
                 <div class="panel-heading">
                   <h3 class="panel-title">Social Account Listing</h3>
                   <div class="actions pull-right">
                       <i class="fa fa-chevron-down"></i>
                   </div>
                 </div>
                 <div class="panel-body">

                   <div class="row">
                     <div class="col-xs-6">
                       <div id="" class="">
                         Show
                         <select name="example1_length" size="1" aria-controls="">
                             <option value="10" selected="selected">10</option>
                               <option value="25">25</option>
                               <option value="50">50</option>
                               <option value="100">100</option>
                           </select> Entries per page</div>
                       </div>
                       <div class="col-xs-6"><div class="dataTables_filter pull-right" id="example1_filter"><label>Search: <input type="text" aria-controls="example1"></label></div>
                       </div>
                   </div>

                   <table id="example" class="table table-striped table-responsive" cellspacing="0" width="100%">
                   <thead>
                       <tr>
                           <th>Name</th>
                           <th>likes</th>
                           <th>Influencer Owner</th>
                           <th>Price Recommendation</th>
                           <th>Category</th>
                           <th>Country</th>
                           <th>Action</th>
                       </tr>
                   </thead>

                   <tbody>
                     <%@social_accounts.each do |social_account|%>
                       <tr>
                           <td><%=social_account.platform_type_id%></td>
                           <td><%=social_account.facebook_page_count%></td>
                           <td><%=Influencer.find(social_account.influencer_id).name%></td>
                           <td>$320,800</td>
                           <td><%=social_account.category%></td>
                           <td><%=social_account.country%></td>
                           <td><a href="#" class="blue"><i class="fa fa-eye" title="View"></i></a> <a href="#" class="green"><i class="fa fa-edit" title="Edit"></i></a> <a href="#" class="red"><i class="fa fa-trash" title="Delete"></i></a></td>
                       </tr>
                       <%end%>

                   </tbody>
               </table>

               <!-- Pagination -->
               <div class="row">
                   <div class="col-xs-6">
                     <div class="dataTables_paginate paging_bootstrap pull-right">
                       <ul class="pagination">
                        <%=will_paginate @social_accounts%>
                       </div>
                   </div>
               </div>

              </div>
            </div>
       </div>
   </div>

   </section>
</section>
