<%=render :partial=>"layouts/header"%>
<%=render :partial=>"layouts/left_panel"%>
<section class="main-content-wrapper column">
   <section id="main-content">
        <div class="row">
           <div class="col-md-12">
             <%= render :partial => "layouts/breadcrumb", :locals => {:breadcrumb => @breadcrumb}%>
             <h1 class="h1"><i class="fa fa-pencil-square-o"></i> Ad Review</h1>
            </div>
       </div>

     <div class="row">
           <div class="col-md-12">
               <div class="panel panel-default">
                 <div class="panel-heading">
                   <h3 class="panel-title">Ad Review Listing</h3>
                   <div class="actions pull-right">
                       <i class="fa fa-chevron-down"></i>
                   </div>
                 </div>
                 <div class="panel-body">

                   <!-- <div class="row">
                     <div class="col-xs-6">
                       <div id="" class="">
                         show
                         <select name="example1_length" size="1" aria-controls="">
                             <option value="10" selected="selected">10</option>
                               <option value="25">25</option>
                               <option value="50">50</option>
                               <option value="100">100</option>
                           </select> Entries per page</div>
                       </div>
                       <div class="col-xs-6"><div class="dataTables_filter pull-right" id="example1_filter"><label>Search: <input type="text" aria-controls="example1"></label></div>
                       </div>
                   </div> -->

                   <table id="example" class="table table-striped table-responsive" cellspacing="0" width="100%">
                   <thead>
                       <tr>
                           <th>Ad Preview</th>
                           <th>Category</th>
                           <th>Influencer Name</th>
                           <th>Influencer Email</th>
                           <th>Link Share</th>
                           <th>Current Status</th>
                           <th>Action</th>
                       </tr>
                   </thead>

                   <tbody>
                     <%@advertisements.each do |advertisement|%>
                       <tr>
                           <td><img src="<%=advertisement.ad_image_url%>" alt="Ad Preview" class="img-thumb"></td>
                           <td><%= Category.find(advertisement.category).name %></td>
                           <td><%= Influencer.find(advertisement.influencer_id).name %></td>
                           <td><%= Influencer.find(advertisement.influencer_id).email %></td>
                           <td><a href="http://facebook.com/"><%=advertisement.url %></a></td>
                           <td><%= Advertisement::STATUS.key (advertisement.status )%> </td>
                           <td>
                             <%if advertisement.status == Advertisement::STATUS["Published by influencer"] %>
                              <p>Published</p>
                                <%elsif advertisement.status == Advertisement::STATUS["Declined by influencer"]%>
                              <p>Declined by influencer</p>
                                <%elsif advertisement.status == approved_by_admin%>
                              <p>Approved by you(Admin)</p>
                             <%else%>
                             <a href=" <%=approve_ads_advertisements_path(id:advertisement.id)%>" data-method="post" class="btn btn-success btn-xs">Approve</a>
                             <a href=" <%=decline_ads_advertisements_path(id:advertisement.id)%>" data-method="post" class="btn btn-danger btn-xs">Decline</a>
                             <a href="#" class="btn btn-info btn-xs">Resend for Change</a>
                             <%end%>
                           </td>
                       </tr>
                       <%end%>
                   </tbody>
               </table>
               <%=will_paginate @advertisements, renderer: BootstrapPagination::Rails%>
              </div>
            </div>
       </div>
   </div>

   </section>
</section>
