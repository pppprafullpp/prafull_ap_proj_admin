
<section id="login-container">
    <div class="row">
        <div class="col-md-3" id="login-wrapper">
            <div class="panel panel-primary animated flipInY">
                <div class="panel-heading">
                    <h3 class="panel-title">
                       Sign In
                    </h3>
                </div>
                <div class="panel-body">
                   <p> Login to access your account.</p>
                      <%= form_for(resource, as: resource_name, url: session_path(resource_name),:html=>{:class=>"form-horizontal"}) do |f| %>
                      <%= devise_error_messages! %>
                        <div class="form-group">
                            <div class="col-md-12">
                              <%= f.text_field :email, autocomplete: "off", :class=>"form-control field-with-icon",:placeholder=>"Enter Email", :style=>"padding-left:35px;"%>
                              <i class="fa fa-user"></i>
                            </div>
                        </div>
                        <div class="form-group">
                           <div class="col-md-12">
                             <%= f.password_field :password, autocomplete: "off", :class=>"form-control field-with-icon",:placeholder=>"Enter Password", :style=>"padding-left:35px;"%>
                             <i class="fa fa-lock"></i>
                                <!--<a href="javascript:void(0)" class="help-block">Forgot Your Password?</a>-->
                            </div>
                        </div>
                        <div class="form-group">
                           <div class="col-md-12">
                                <%=f.submit("Sign in", :class=>"btn btn-primary btn-block")%>
                           </div>
                        </div>
                    <%end%>
                    <%#= render "devise/shared/links" %>
                </div>
            </div>
        </div>
    </div>

</section>
